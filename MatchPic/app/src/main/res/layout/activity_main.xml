<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/background"

    >


        <LinearLayout
            android:id="@+id/ll01"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Game \nStart"
                    android:textAllCaps="false"
                    android:textSize="20sp"
                    android:layout_marginRight="30dp"
                    android:onClick="clickBtn"


                    />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="How to \nplay"
                    android:textAllCaps="false"
                    android:textSize="20sp"
                    android:onClick="clickBtn2"/>

        </LinearLayout>


        <GridLayout
            android:id="@+id/gl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/ll01">

                <ImageView
                    android:id="@+id/iv01"
                    android:src="@drawable/a_ele"
                    android:layout_column="0"
                    android:layout_width="130dp"
                    android:layout_height="130dp"/>
                <ImageView
                    android:id="@+id/iv02"
                    android:src="@drawable/a_frog"
                    android:layout_column="2"
                    android:layout_width="130dp"
                    android:layout_height="130dp"/>

                <ImageView
                    android:id="@+id/iv03"
                    android:src="@drawable/a_lion"
                    android:layout_row="1"
                    android:layout_column="1"
                    android:layout_width="130dp"
                    android:layout_height="130dp"/>

                <ImageView
                    android:id="@+id/iv04"
                    android:src="@drawable/a_monkey"
                    android:layout_row="2"
                    android:layout_column="0"
                    android:layout_width="130dp"
                    android:layout_height="130dp"/>

                <ImageView
                    android:id="@+id/iv05"
                    android:src="@drawable/a_pig"
                    android:layout_column="2"
                    android:layout_width="130dp"
                    android:layout_height="130dp"/>


        </GridLayout>



                <TextView
                    android:layout_below="@id/gl"
                    android:id="@+id/tv"
                    android:layout_width="250dp"
                    android:layout_height="200dp"
                    android:background="@drawable/q_board"
                    android:layout_centerInParent="true"
                    android:textSize="50sp"
                    android:gravity="center"
                    android:textStyle="bold"

                    />







</RelativeLayout>