<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="16dp"
    tools:context=".MainActivity">



    <ImageView
        android:id="@+id/iv"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/thumb_moana"/>

    <TextView
        android:id="@+id/tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="android"
        android:textStyle="bold"

        android:textSize="20sp"
        android:layout_toRightOf="@id/iv"
        android:layout_marginBottom="10dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello. How are you today?"
        android:layout_below="@id/tv"
        android:textSize="15sp"
        android:layout_toRightOf="@id/iv"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2018.12.05"
        android:textSize="15sp"
        android:layout_alignParentRight="true"
        android:layout_alignBaseline="@id/tv"/>


    <TextView
        android:id="@+id/line01"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@id/iv"
        android:background="#c0c0c2"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"/>

    <TextView
        android:id="@+id/tv01"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="androidprimelnfo"
        android:textColor="#FF000000"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_below="@id/line01"
        android:layout_marginBottom="5dp"/>

    <ImageView

        android:id="@+id/iv_test"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:src="@drawable/ic_more_vert_black_24dp"
        android:layout_below="@id/line01"

        android:layout_alignParentRight="true"
        android:clickable="true"
        android:onClick="clickIv01"

       />

    <TextView

        android:id="@+id/tv02"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Metro Manila, Philippines"

        android:layout_marginBottom="10dp"
        android:textSize="15sp"
        android:textStyle="bold"
        android:layout_below="@id/tv01"/>

    <ImageView
        android:id="@+id/iv01"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:background="@drawable/moana"
        android:layout_marginBottom="10dp"
        android:layout_below="@id/tv02"

        />

    <ImageView
        android:id="@+id/iv02"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_favorite_black_24dp"
        android:layout_below="@id/iv01"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="15dp"
        android:clickable="true"
        android:onClick="clickIv"
        android:tag="heart"/>

    <ImageView
        android:id="@+id/iv03"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_chat_bubble_outline_black_24dp"
        android:layout_below="@id/iv01"
        android:layout_marginRight="15dp"
        android:layout_toRightOf="@id/iv02"
        android:clickable="true"
        android:onClick="clickIv"
        android:tag="chatbubble"/>

    <ImageView
        android:id="@+id/iv04"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_send_black_24dp"
        android:layout_below="@id/iv01"
        android:layout_toRightOf="@id/iv03"
        android:clickable="true"
        android:onClick="clickIv"
        android:tag="send"/>

    <ImageView
        android:id="@+id/iv05"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_move_to_inbox_black_24dp"
        android:layout_below="@id/iv01"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:clickable="true"
        android:onClick="clickIv"
        android:tag="box"
        />

    <TextView
        android:id="@+id/line02"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#c0c0c2"
        android:layout_margin="10dp"
        android:layout_below="@id/iv03"/>

    <TextView
        android:id="@+id/tv03"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Write your description here.."
        android:layout_marginLeft="10dp"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_below="@id/line02"/>

    <TextView
        android:id="@+id/tv04"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="26 MINUTES AGO"
        android:layout_marginLeft="10dp"
        android:textSize="12sp"
        android:textStyle="bold"
        android:textColor="#c0c0c2"
        android:layout_below="@id/tv03"/>




</RelativeLayout>